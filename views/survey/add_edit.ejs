<%- include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= survey._id %>"
                    >
                    <label for="nameTextField">Title</label>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter the title of the survey"
                        name="title" 
                        value="<%= survey.title %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="startdateTextField">Survey Start Date</label>
                    <input type="date" class="form-control"
                        id="startdateTextField"
                        placeholder="Enter survey start date"
                        name="startdate" 
                        value="<%= survey.startdate %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="enddateTextField">Survey End Date</label>
                    <input type="date" class="form-control"
                    id="enddateTextField"
                    placeholder="Enter survey end date"
                    name="enddate" 
                    value="<%= survey.enddate %>"
                    >
                </div>
                <br />
                <div class="form-group">
                    <label for="typeTextField">Survey type</label>
                    <input type="text" class="form-control"
                    id="typeTextField"
                    placeholder="Enter survey type"
                    name="surveytype" 
                    value="<%= survey.surveytype %>"
                    >
                </div>
                <br />
                <div class="form-group">
                    <label for="q1TextField">Question #1</label>
                    <input type="text" class="form-control"
                        id="q1TextField"
                        placeholder="Enter Question #1"
                        name="q1" 
                        value="<%= survey.question[0] %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="q2TextField">Question #2</label>
                    <input type="text" class="form-control"
                        id="q2TextField"
                        placeholder="Enter Question #2"
                        name="q2" 
                        value="<%= survey.question[1] %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="q3TextField">Question #3</label>
                    <input type="text" class="form-control"
                        id="q3TextField"
                        placeholder="Enter Question #3"
                        name="q3" 
                        value="<%= survey.question[2] %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="q4TextField">Question #4</label>
                    <input type="text" class="form-control"
                        id="q4TextField"
                        placeholder="Enter Question #4"
                        name="q4" 
                        value="<%= survey.question[3] %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="q5TextField">Question #5</label>
                    <input type="text" class="form-control"
                        id="q5TextField"
                        placeholder="Enter Question #5"
                        name="q5" 
                        value="<%= survey.question[4] %>"
                        required>
                </div>
                <br />
                

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/survey/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>